<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#EA3F60"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:id="@+id/act_symbol"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|top"
            android:scaleType="centerCrop"
            android:layout_column="0"
            android:src="@drawable/mapbox_compass_icon"
            ></ImageView>

        <ImageView
            android:id="@+id/cal_symbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:scaleType="fitCenter"
            android:src="@drawable/mapbox_compass_icon"></ImageView>

        <TextView
            android:id="@+id/activityPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activityName"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:paddingLeft="120dp"
                android:text="New York"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/activityAddress"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:paddingLeft="120dp"
                android:text="New York, New York, USA"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

    </GridLayout>


</androidx.cardview.widget.CardView>
