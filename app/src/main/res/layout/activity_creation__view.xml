<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Creation_View">

    <Button
        android:id="@+id/editStartDate"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:drawableEnd="@drawable/ic_arrow_drop_down_navy_blue_24dp"
        android:onClick="createDatePicker"
        android:text="Start Date"
        app:layout_constraintEnd_toStartOf="@+id/editStartDate2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editStartDate2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:drawableEnd="@drawable/ic_arrow_drop_down_navy_blue_24dp"
        android:onClick="createDatePicker"
        android:text="End Date"
        app:layout_constraintStart_toEndOf="@+id/editStartDate"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>