<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@android:style/Theme.Light"
    tools:context=".ItineraryView">


    <TextView
        android:id="@+id/tripName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="500dp"
        android:autofillHints="@string/autofill_trip_name_hint"
        android:background="@color/navyBlue"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/autofill_trip_name_hint"
        android:text="@{viewmodel.tripName}"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/tripName"
        tools:layout_editor_absoluteX="-3dp">

        <androidx.cardview.widget.CardView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tripName"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="4dp"
            app:cardElevation="3dp"
            android:layout_gravity="center|top"
            >
            <include
                android:id="@+id/selected"
                layout="@layout/item_itinerary_list_tile"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/itineraryCard"
            layout="@layout/itinerary_tile" />
    </com.mapbox.mapboxsdk.maps.MapView>

    <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
        android:id="@+id/sublist_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mapView"
        android:clipToPadding="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:msrv_gravity="start"
        app:msrv_interval="1" />
</RelativeLayout>